# Sample environment variables configuration file.
# Copy this file to .env and update with your settings.

# App settings
APP_NAME=ISO Standards Games
DEBUG=true
DEFAULT_LOCALE=en

# LLM provider: ollama or azure
LLM_PROVIDER=ollama

# Ollama settings
OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_MODEL=gpt-oss
OLLAMA_MODEL=qwen3

# Azure OpenAI settings (only needed if LLM_PROVIDER=azure)
# AZURE_OPENAI_API_KEY=your-api-key
# AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
# AZURE_OPENAI_API_VERSION=2023-05-15
# AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name

# Database settings
DATABASE_URL=sqlite:///./iso_standards_games.db