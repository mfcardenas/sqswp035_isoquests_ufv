# Archivo de configuración para producción en Back4App
# Copiar estas variables de entorno al dashboard de Back4App

# Configuración de la aplicación
APP_NAME=ISO Standards Games
DEBUG=false
DEFAULT_LOCALE=en

# Proveedor de LLM (configurar según disponibilidad)
LLM_PROVIDER=ollama

# Configuración Ollama (si está disponible)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen3

# Configuración Azure OpenAI (alternativa)
# Descomentar y configurar si se usa Azure en lugar de Ollama
# LLM_PROVIDER=azure
# AZURE_OPENAI_API_KEY=tu-api-key-aqui
# AZURE_OPENAI_ENDPOINT=https://tu-recurso.openai.azure.com/
# AZURE_OPENAI_API_VERSION=2023-05-15
# AZURE_OPENAI_DEPLOYMENT_NAME=tu-deployment-name

# Base de datos (SQLite persistente en Back4App)
DATABASE_URL=sqlite:///./data/iso_standards_games.db

# Puerto para Back4App (manejado automáticamente)
# PORT variable se asigna dinámicamente por Back4App

# Variables de FastAPI para producción
WORKERS=1
RELOAD=false

# Configuraciones adicionales
PYTHONUNBUFFERED=1
PYTHONPATH=/app